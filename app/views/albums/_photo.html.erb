<% # from http://shiningthrough.co.uk/Dynamic-multiple-image-uploads-with-Ruby-on-Rails -%>
<fieldset>
  <% # if the object isn't new i.e.,
     # it exists in the database,
     # we'll just show it.
     # from: http://shiningthrough.co.uk/Dynamic-multiple-image-uploads-with-Ruby-on-Rails
    if !f.object.new_record? %>
    <%= image_tag f.object.image(:thumbnail).url %>
  <% end %>

  <%= f.file_field :image %>
  <%= delete_photo(f) %>
</fieldset>
