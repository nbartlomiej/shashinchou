<h2>
  <%= @album.name %>
  <% if @album.user == current_user -%>
    ( <%= link_to 'Edit', edit_album_path(@album) %> ,
    <%= link_to 'Destroy', @album, :confirm => 'Are you sure?', :method => :delete %> )
  <% end -%>
</h2>
<div class='span-24 album-horizontal'>
  <div>
    <% @album.photos.each do |photo| %>
      <%= link_to image_tag(photo.image(:thumbnail)), photo_path(photo) %>
    <% end %>
  </div>
  <span class='quiet large'><%= "This album is empty..." unless @album.photos.count > 0 %></span>
</div>

<%= link_to 'Back', albums_path %>
